<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="492.0" prefWidth="806.0" xmlns="http://javafx.com/javafx/19"
            fx:controller="org.app.MainApp.MainAppController">
    <top>
        <Label text="Symulacja Mrowiska" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </Label>
    </top>
    <center>
        <Pane fx:id="world" prefHeight="450.0" prefWidth="396.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </Pane>
    </center>
    <bottom>
        <HBox alignment="CENTER" layoutX="200.0">
            <children>
                <Button mnemonicParsing="false" onAction="#start" text="Start"/>
                <Button mnemonicParsing="false" onAction="#stop" text="Stop"/>
                <Button mnemonicParsing="false" onAction="#reset" text="Reset"/>
                <Button mnemonicParsing="false" onAction="#step" text="Step"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </HBox>
    </bottom>
    <right>
        <VBox prefHeight="477.0" prefWidth="244.0" BorderPane.alignment="CENTER">
            <children>
                <AreaChart fx:id="populacjaant" prefHeight="155.0" prefWidth="200.0" title="Ilość Mrówków">
                    <xAxis>
                        <CategoryAxis side="BOTTOM"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT"/>
                    </yAxis>
                </AreaChart>
                <AreaChart fx:id="iloscpheromonow" prefHeight="155.0" prefWidth="200.0" title="Ilość Mrówków">
                    <xAxis>
                        <CategoryAxis side="BOTTOM"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT"/>
                    </yAxis>
                </AreaChart>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </VBox>
    </right>
    <left>
        <ScrollPane prefHeight="430.0" prefWidth="174.0" BorderPane.alignment="CENTER">
            <content>
                <VBox prefHeight="460.0" spacing="10.0">
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                    <children>
                        <Label text="Current Tick"/>
                        <TextField fx:id="ticktext"/>
                        <Label text="Długość życia mrówki"/>
                        <Slider fx:id="AntLifeTimeSlide" max="10000.0" showTickLabels="true" showTickMarks="true"
                                value="1500.0"/>
                        <Label text="Długość kroku mrówki"/>
                        <Slider fx:id="AntStepLengthSlide" majorTickUnit="2.0" max="10.0" showTickLabels="true"
                                showTickMarks="true" value="1.0"/>
                        <Label text="Zasięg mrówki"/>
                        <Slider fx:id="AntRangeSlide" showTickLabels="true" showTickMarks="true" value="10.0"/>
                        <Label text="AntTurnAngleMax"/>
                        <Slider fx:id="AntTurnAngleMaxSlide" majorTickUnit="0.2" max="1.0" showTickLabels="true"
                                showTickMarks="true" value="0.01"/>
                        <Label text="Szerokość mrówki"/>
                        <Slider fx:id="AntSizeSlide" majorTickUnit="2.0" max="10.0" showTickLabels="true"
                                showTickMarks="true" value="5.0"/>
                        <Label text="Szerokość mrowiska"/>
                        <Slider fx:id="AnthillCircleRadiusSlide" majorTickUnit="2.0" max="10.0" showTickLabels="true"
                                showTickMarks="true" value="10.0"/>
                        <Label layoutX="15.0" layoutY="332.0" text="Szerokość feromonu"/>
                        <Slider fx:id="PheromoneCircleRadiusSlide" layoutX="15.0" layoutY="359.0" majorTickUnit="2.0"
                                max="10.0" showTickLabels="true" showTickMarks="true" value="2.0"/>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </left>
</BorderPane>
